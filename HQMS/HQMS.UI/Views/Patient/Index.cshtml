@model List<PatientModel>

@{
    ViewData["Title"] = "Patients";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-user-injured me-2"></i>Patients</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Add New Patient
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="myTable" class="table table-striped table-bordered datatable">
                    <thead class="table-Dark">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Department</th>
                            <th>Registered At</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Any())
                        {
                            foreach (var p in Model)
                            {
                                <tr data-patient-id="@p.PatientId">
                                    <td></td>
                                    <td>@p.Name</td>
                                    <td>@p.Age</td>
                                    <td>@p.Gender</td>
                                    <td>@p.Department</td>
                                    <td>@p.RegisteredAt.ToString("dd-MMM-yyyy hh:mm tt")</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@p.PatientId" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@p.PatientId" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No patients found.</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
