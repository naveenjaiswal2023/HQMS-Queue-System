@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2 class="mb-4">Admin Dashboard</h2>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary shadow">
                <div class="card-body">
                    <h5>Total Doctors</h5>
                    <h3>15</h3>
                    <i class="fa-solid fa-user-md fa-2x float-end"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success shadow">
                <div class="card-body">
                    <h5>Total Patients</h5>
                    <h3>120</h3>
                    <i class="fa-solid fa-hospital-user fa-2x float-end"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning shadow">
                <div class="card-body">
                    <h5>Active Queues</h5>
                    <h3>8</h3>
                    <i class="fa-solid fa-list-ol fa-2x float-end"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-danger shadow">
                <div class="card-body">
                    <h5>Pending Appointments</h5>
                    <h3>27</h3>
                    <i class="fa-solid fa-calendar-check fa-2x float-end"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h4>System Overview</h4>
        <p>Welcome to the Hospital Queue Management System. Use the sidebar to manage doctors, patients, and queues in real time.</p>
    </div>
</div>
